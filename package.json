{
  "name": "dzu",
  "version": "0.1.1",
  "description": "Dan's Zip Util - A CLI-based backup tool.",
  "type": "module",
  "bin": "./bin.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "rm -rf dist && tsc --watch",
    "lint": "eslint . --max-warnings 0 && tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "package": "npm run build && npm pack"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "backup",
    "cli",
    "zip"
  ],
  "author": "dan-schel",
  "license": "MIT",
  "homepage": "https://github.com/dan-schel/dzu",
  "repository": {
    "type": "git",
    "url": "git@github.com:dan-schel/dzu.git"
  },
  "bugs": {
    "url": "https://github.com/dan-schel/dzu/issues"
  },
  "devDependencies": {
    "@eslint/js": "9.27.0",
    "@types/node": "22.15.24",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1"
  },
  "dependencies": {
    "@dan-schel/js-utils": "4.0.5",
    "zod": "3.25.36"
  }
}
